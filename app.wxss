/* app.wxss - 全局样式 */
page {
  background-color: #f7f8fc;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
  color: #333;
}

/* 通用样式 */
.text-primary {
  color: #2DD4BF;
}

.bg-primary {
  background-color: #2DD4BF;
}

.text-secondary {
  color: #64748B;
}

.text-success {
  color: #10B981;
}

.text-error {
  color: #EF4444;
}

.text-gray {
  color: #999;
}

/* 修复微信小程序默认button样式 */
button {
  background-color: transparent;
  line-height: normal;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0;
  margin: 0;
}

button::after {
  border: none;
}

/* 常用布局类 */
.flex {
  display: flex;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

.justify-center {
  justify-content: center;
}

/* 间距类 */
.mt-2 {
  margin-top: 16rpx;
}

.mb-2 {
  margin-bottom: 16rpx;
}

.ml-2 {
  margin-left: 16rpx;
}

.mr-2 {
  margin-right: 16rpx;
}

.p-2 {
  padding: 16rpx;
}

.p-3 {
  padding: 24rpx;
}

.p-4 {
  padding: 32rpx;
}

/* 圆角类 */
.rounded {
  border-radius: 12rpx;
}

.rounded-lg {
  border-radius: 20rpx;
}

.rounded-full {
  border-radius: 9999rpx;
}

/* 阴影类 */
.shadow-sm {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.shadow {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}