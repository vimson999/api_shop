/* 状态栏高度 */
.status-bar {
  height: 40px; /* 固定高度，可根据设备调整 */
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
/* 导航栏样式 */
.nav-bar {
  position: fixed;
  top: 40px; /* 状态栏的高度 */
  left: 0;
  width: 100%;
  height: 50px; /* 导航栏高度 */
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
  background: rgba(255, 255, 255, 0.8);
}


.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05); /* 细微边框增加质感 */
}

.username {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.points-info {
  display: flex;
  align-items: center;
}

.points-label {
  font-size: 24rpx;
  color: #888;
  margin-right: 8rpx; /* 增加标签与数值之间的间距 */
}

.points-value {
  font-size: 40rpx; /* 增大字体 */
  font-weight: 600;
  color: #2DD4BF; /* 与设计稿保持一致的鲜明绿色 */
  background: linear-gradient(90deg, #2DD4BF, #4EECD6); /* 添加渐变效果 */
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.refresh-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 15rpx;
  opacity: 0.65;
}

/* 功能区网格 */
.function-grid {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}


.function-item {
  width: 32%;
  min-height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-radius: 16rpx;
  background-color: white;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  padding: 20rpx;
  position: relative;
}


.function-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(to right, #2DD4BF, #38bdf8);
  opacity: 0.8;
}

.function-content {
  padding: 20rpx 24rpx;
  display: flex;
  flex-direction: column;
  height: 100%;
}


.function-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  color: #333;
}


.function-desc {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
}

/* 卡片通用样式 */
.card {
  width: 100%;
  border-radius: 18rpx;
  background-color: white;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 20rpx;
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 22rpx 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
}

.card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.card-subtitle {
  font-size: 22rpx;
  color: #999;
}

.card-content {
  padding: 16rpx 24rpx;
}

.card-content.hidden {
  display: none;
}

/* 公告和状态样式 */
.notice-text, .status-text {
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
  line-height: 1.5;
}

.text-success {
  color: #10B981;
}

.text-error {
  color: #EF4444;
}

.text-primary {
  color: #2DD4BF;
}

/* 历史记录列表 */
.history-list {
  width: 100%;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
}

.history-item:last-child {
  border-bottom: none;
}

.history-info {
  flex: 1;
}

.history-title {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 6rpx;
  font-weight: 500;
}

.history-time {
  font-size: 24rpx;
  color: #AEAEB4;
}

.history-points {
  font-size: 28rpx;
  color: #2DD4BF;
  text-align: right;
  min-width: 70rpx;
  font-weight: 500;
}

/* 图标字体 */
@font-face {
  font-family: "iconfont";
  src: url('data:font/woff2;charset=utf-8;base64,') format('woff2');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 28rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-refresh:before {
  content: "\e72c";
}

.icon-down:before {
  content: "\e69b";
}

.icon-notice:before {
  content: "\e645";
  margin-right: 12rpx;
  font-size: 32rpx;
}

.icon-success:before {
  content: "\e610";
  margin-right: 12rpx;
  font-size: 32rpx;
  color: #10B981;
}

.icon-error:before {
  content: "\e64a";
  margin-right: 12rpx;
  font-size: 32rpx;
  color: #EF4444;
}

/* 处理禁用状态的样式 */
.disabled {
  opacity: 0.65;
}

.gray-text {
  color: #999;
}

.container {
  padding: 0 24rpx;
  margin-top: calc(120rpx + env(safe-area-inset-top)); /* 调整这个值以适应您的导航栏高度 */
}


/* 主容器调整 */
.container {
  margin-top: 90px; /* 状态栏+导航栏的总高度 */
  padding: 0 24rpx;
}

