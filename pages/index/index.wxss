/* index.wxss */
page {
  background-color: #f7f8fc;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
}

.page-container {
  padding: 0 24rpx;
  box-sizing: border-box;
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background-color: #f0f0f0; /* 头像背景色，避免加载前空白 */
}

.username {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.points-section {
  display: flex;
  align-items: center;
}

.points-label {
  font-size: 24rpx;
  color: #888;
  margin-right: 8rpx;
}

.points-value {
  font-size: 46rpx;
  font-weight: 600;
  color: #2DD4BF;
  margin-right: 12rpx;
}

.refresh-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 功能区网格 */
.function-cards {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
  margin-top: 20rpx;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 24rpx;
  overflow: hidden;
}

.function-card {
  width: 31.5%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.card-content {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
  box-sizing: border-box;
}

.card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  text-align: center;

}

.card-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.3;
}

/* 卡片通用样式 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  /* text-align: center */

}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
}

.card-body {
  padding: 24rpx 30rpx;
}

.card-body.no-padding {
  padding: 10rpx 30rpx;
}

/* 系统公告 */
.notice-content {
  display: flex;
  align-items: center;
}

.notice-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(45, 212, 191, 0.1);
  margin-right: 16rpx;
}

.notice-image {
  width: 28rpx;
  height: 28rpx;
}

.notice-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  flex: 1;
}

/* API服务状态 */
.status-content {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.status-icon-container {
  margin-right: 12rpx;
  display: flex;
}

.status-icon {
  width: 36rpx;
  height: 36rpx;
}

.status-text {
  font-size: 30rpx;
  line-height: 1.5;
}

.text-success {
  color: #10B981;
}

.text-primary {
  color: #2DD4BF;
}

/* 积分消耗明细 */
.history-list {
  width: 100%;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.history-item:last-child {
  border-bottom: none;
}

.history-left {
  display: flex;
  flex-direction: column;
}

.history-title {
  font-size: 27rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}

.history-points {
  font-size: 27rpx;
  color: #2DD4BF;
  font-weight: 500;
}

/* 图标字体 */
@font-face {
  font-family: "iconfont";
  src: url('data:font/woff2;charset=utf-8;base64,') format('woff2');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 28rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-refresh:before {
  content: "\e72c";
  font-size: 36rpx;
  color: #888;
}

.icon-down:before {
  content: "\e69b";
  font-size: 34rpx;
  color: #999;
}

.icon-notice:before {
  content: "\e645";
  font-size: 28rpx;
  color: #2DD4BF;
}

.icon-success:before {
  content: "\e610";
  margin-right: 12rpx;
  font-size: 32rpx;
  color: #10B981;
}

.icon-error:before {
  content: "\e64a";
  margin-right: 12rpx;
  font-size: 32rpx;
  color: #EF4444;
}