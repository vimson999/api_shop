/* 导航栏样式 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.username {
  font-size: 28rpx;
  font-weight: 500;
}

.points-info {
  display: flex;
  align-items: center;
}

.points-label {
  font-size: 24rpx;
  color: #64748B;
}

.points-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #2DD4BF;
  margin-left: 8rpx;
}

.refresh-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

/* 功能区网格 */
.function-grid {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.function-item {
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 10rpx;
  border-radius: 16rpx;
  background-color: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10rpx);
}

.function-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.function-title {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.function-desc {
  font-size: 22rpx;
  color: #64748B;
}

/* 卡片通用样式 */
.card {
  width: 100%;
  border-radius: 16rpx;
  background-color: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10rpx);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 500;
}

.card-subtitle {
  font-size: 24rpx;
  color: #9CA3AF;
}

.card-content.hidden {
  display: none;
}

/* 公告和状态样式 */
.notice-text, .status-text {
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.text-success {
  color: #10B981;
}

.text-error {
  color: #EF4444;
}

/* 历史记录列表 */
.history-list {
  width: 100%;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #F3F4F6;
}

.history-item:last-child {
  border-bottom: none;
}

.history-title {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.history-time {
  font-size: 24rpx;
  color: #9CA3AF;
}

.history-points {
  font-size: 28rpx;
}

/* 底部操作区 */
.bottom-actions {
  position: fixed;
  bottom: 98rpx; /* 底部tabBar高度是98rpx，加上边距 */
  left: 0;
  width: 100%;
  padding: 20rpx 30rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  border: none;
}

.btn-primary {
  background-color: rgba(45, 212, 191, 0.9);
  color: white;
}

.btn-primary::after {
  border: none;
}

.btn-secondary {
  background-color: rgba(100, 116, 139, 0.9);
  color: white;
}

.btn-secondary::after {
  border: none;
}

/* 图标字体 */
@font-face {
  font-family: "iconfont";
  src: url('data:font/woff2;charset=utf-8;base64,') format('woff2');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 32rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-refresh:before {
  content: "\e72c";
}

.icon-down:before {
  content: "\e69b";
}

.icon-notice:before {
  content: "\e645";
}

.icon-success:before {
  content: "\e610";
}

.icon-error:before {
  content: "\e64a";
}