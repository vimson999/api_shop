/* pages/user/user.wxss */
.page-container {
  background-color: #f7f8fc;
  min-height: 100vh;
  padding: 0 30rpx;
  box-sizing: border-box;
}

/* 顶部标题栏 */
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 用户信息卡片 */
.user-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.user-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
  background-color: #f0f0f0; /* 头像背景色，避免加载前空白 */
}

.user-name {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.binding-status {
  display: flex;
  margin-top: 10rpx;
}

.binding-item {
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin: 0 10rpx;
}

.binding-item.bound {
  background-color: rgba(38, 236, 210, 0.1);
}

.binding-item.unbound {
  background-color: #f5f5f5;
}

.binding-text {
  font-size: 24rpx;
  color: #666;
}

/* 系统设置区 */
.settings-card {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 60rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-text {
  font-size: 30rpx;
  color: #333;
}

.setting-arrow {
  font-size: 34rpx;
  color: #999;
}

/* 退出登录按钮 */
.logout-container {
  padding: 40rpx 0;
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
}

.logout-btn {
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #fff;
  color: #EF4444;
  font-size: 32rpx;
  border-radius: 45rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}